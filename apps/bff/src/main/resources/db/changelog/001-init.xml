<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="001-create-raw-events" author="dripswap">
        <createTable tableName="raw_events">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="chain_id" type="VARCHAR(64)"/>
            <column name="block_number" type="BIGINT"/>
            <column name="tx_hash" type="VARCHAR(128)"/>
            <column name="log_index" type="INT"/>
            <column name="event_sig" type="VARCHAR(256)"/>
            <column name="raw_data" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-demo-tx" author="dripswap">
        <createTable tableName="demo_tx">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="chain_id" type="VARCHAR(64)"/>
            <column name="tx_hash" type="VARCHAR(128)"/>
            <column name="status" type="VARCHAR(32)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-chain-cursor" author="dripswap">
        <createTable tableName="chain_cursor">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="chain_id" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="last_block_number" type="BIGINT"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- Include additional changelogs -->
    <include file="classpath:db/changelog/002-create-tx-records.xml"/>
    <include file="classpath:db/changelog/003-subgraph-sync.xml"/>

</databaseChangeLog>
